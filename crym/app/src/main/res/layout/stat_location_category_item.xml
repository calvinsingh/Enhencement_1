<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginEnd="8dp"
  android:layout_marginStart="8dp"
  android:layout_marginTop="8dp"
  >


  <RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="8dp">
    <TextView
      android:id="@+id/crime_location_rate_average"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      android:text="4.5"
      android:textAppearance="@style/TextAppearance.AppCompat.Large"
      />

    <TextView
      android:id="@+id/tv_crime_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentStart="true"
      android:ellipsize="end"
      android:maxLines="1"
      android:text="Nairobi"
      android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <ImageView
      android:id="@+id/star1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="6dp"
      android:layout_marginEnd="4dp"
      android:layout_toStartOf="@id/star2"
      android:contentDescription="@string/app_name"
      android:padding="2dp"
      android:src="@drawable/ic_fullstar" />
    <ImageView
      android:id="@+id/star2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="6dp"
      android:layout_marginEnd="4dp"
      android:layout_toStartOf="@id/star3"
      android:contentDescription="@string/app_name"
      android:padding="2dp"
      android:src="@drawable/ic_fullstar" />
    <ImageView
      android:id="@+id/star3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="6dp"
      android:layout_marginEnd="4dp"
      android:layout_toStartOf="@id/star4"
      android:contentDescription="@string/app_name"
      android:padding="2dp"
      android:src="@drawable/ic_fullstar" />
    <ImageView
      android:id="@+id/star4"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="6dp"
      android:layout_marginEnd="4dp"
      android:layout_toStartOf="@id/star5"
      android:contentDescription="@string/app_name"
      android:padding="2dp"
      android:src="@drawable/ic_fullstar" />

    <ImageView
      android:id="@+id/star5"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="6dp"
      android:layout_marginEnd="31dp"
      android:layout_toStartOf="@id/crime_location_rate_average"
      android:contentDescription="@string/app_name"
      android:padding="2dp"
      android:src="@drawable/ic_half_star" />


  </RelativeLayout>

</androidx.cardview.widget.CardView>